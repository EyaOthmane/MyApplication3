<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".layoutactivity2">

    <ImageButton
        android:id="@+id/settingsButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="20dp"
        android:layout_marginRight="20dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/ic_settings"
        android:background="#EFEFEF"
        tools:ignore="VectorDrawableCompat"
        android:clickable="true"/>

    <ImageButton
        android:id="@+id/bedroomButton"
        android:layout_width="170dp"
        android:layout_height="220dp"
        android:layout_marginStart="20dp"
        android:layout_marginLeft="20dp"
        android:clickable="true"
        android:padding="0dp"

        android:layout_marginTop="100dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/ic_bedroom"
        tools:ignore="VectorDrawableCompat" />

    <ImageButton
        android:id="@+id/bathroomButton"
        android:layout_width="82dp"
        android:layout_height="120dp"
        android:layout_marginStart="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="100dp"
        android:clickable="true"
        android:padding="0dp"
        app:layout_constraintStart_toEndOf="@+id/bedroomButton"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/ic_bathroom"
        tools:ignore="VectorDrawableCompat" />

    <ImageButton
        android:id="@+id/kitchenButton"
        android:layout_width="0dp"
        android:layout_height="120dp"
        android:layout_marginStart="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="100dp"
        android:layout_marginEnd="20dp"
        android:layout_marginRight="20dp"
        android:clickable="true"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/bathroomButton"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/ic_kitchen"
        tools:ignore="VectorDrawableCompat" />

    <ImageButton
        android:id="@+id/livingButton"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginStart="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="2dp"
        android:layout_marginEnd="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginBottom="20dp"
        android:clickable="true"
        android:padding="0dp"
        app:layout_constraintBottom_toTopOf="@+id/yardButton"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/bathroomButton"
        app:layout_constraintTop_toBottomOf="@+id/kitchenButton"
        app:srcCompat="@drawable/ic_living"
        tools:ignore="VectorDrawableCompat" />

    <ImageButton
        android:id="@+id/yardButton"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="20dp"
        android:layout_marginBottom="150dp"
        android:clickable="true"
        android:padding="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/bedroomButton"
        app:srcCompat="@drawable/ic_yard"
        tools:ignore="VectorDrawableCompat" />

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginStart="180dp"
        android:layout_marginLeft="180dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="13dp"
        android:layout_marginRight="13dp"
        android:layout_marginBottom="26dp"
        app:layout_constraintBottom_toTopOf="@+id/yardButton"
        app:layout_constraintEnd_toStartOf="@+id/livingButton"
        app:layout_constraintHorizontal_bias="0.6"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/bathroomButton"
        app:srcCompat="?attr/colorButtonNormal" />

</android.support.constraint.ConstraintLayout>
